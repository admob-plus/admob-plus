<?xml version='1.0' encoding='utf-8'?>
<plugin id="admob-plus-cordova-native" version="1.0.0-alpha.19"
    xmlns="http://apache.org/cordova/ns/plugins/1.0"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <name>admob-plus-cordova-native</name>
    <js-module name="AdMobNative" src="www/index.js">
        <clobbers target="admobNative" />
    </js-module>

    <platform name="android">
        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="AdMobNative">
                <param name="android-package" value="admob.plus.cordova.nativead.Plugin"/>
                <param name="onload" value="true" />
            </feature>
        </config-file>

        <source-file src="src/android/AdViewProvider.kt" target-dir="app/src/main/kotlin/admob/plus/cordova/nativead" />
        <source-file src="src/android/Plugin.kt" target-dir="app/src/main/kotlin/admob/plus/cordova/nativead" />

        <!-- AUTOGENERATED: ANDROID_BEGIN -->
        <resource-file src="src/android/res/layout/ad_unified.xml" target="res/layout/ad_unified.xml" />
        <!-- AUTOGENERATED: ANDROID_END -->
    </platform>

    <platform name="ios">
        <config-file target="config.xml" parent="/*">
            <feature name="AdMobNative">
                <param name="ios-package" value="AdMobNativePlugin" />
            </feature>
        </config-file>

        <resource-file src="src/ios/AMNAdView.xcassets" target="" />
        <!-- AUTOGENERATED: IOS_BEGIN -->
        <resource-file src="src/ios/AMNAdView.xib" />
        <source-file src="src/ios/AMNAdViewProvider.swift" />
        <source-file src="src/ios/AdMobNativePlugin.swift" />
        <!-- AUTOGENERATED: IOS_END -->
    </platform>
</plugin>

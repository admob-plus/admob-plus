{
  "extends": "@admob-plus-internal/tsconfig",
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "stripInternal": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": false,
    "noImplicitAny": true,
    "module": "es2015",
    "moduleResolution": "node",
    "outDir": "build",
    "rootDir": "src",
    "target": "es2015",
    "skipLibCheck": true,
    "lib": ["es2017", "dom"],
    "inlineSources": true,
    "sourceMap": true
  },
  "include": ["src/**/*.ts"]
}

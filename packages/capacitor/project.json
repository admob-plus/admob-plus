{
  "name": "capacitor",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "rollup -c rollup.config.js",
        "cwd": "packages/capacitor"
      },
      "dependsOn": ["build-tsc"],
      "outputs": ["{workspaceRoot}/dist"]
    },
    "build-tsc": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc",
        "cwd": "packages/capacitor"
      },
      "dependsOn": ["docgen"],
      "outputs": ["{workspaceRoot}/dist"]
    },
    "docgen": {
      "executor": "nx:run-script",
      "options": {
        "script": "docgen"
      },
      "outputs": ["{workspaceRoot}/README.md", "{workspaceRoot}/dist/docs.json"]
    },
    "clean": {
      "executor": "nx:run-script",
      "options": {
        "script": "clean"
      },
      "outputs": ["{workspaceRoot}/dist"]
    }
  }
}
